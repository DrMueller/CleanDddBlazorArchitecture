@page "/individuals"


<div class="animate__animated animate__fadeInRight">
    <h3>Individuals</h3>
    <button class="btn btn-primary" @onclick="NavigateToCreate">Create</button>

    @if (!string.IsNullOrEmpty(InfoMessage))
    {
        <div class="alert alert-primary" role="alert">
            @InfoMessage
        </div>
    }

    @if (OverviewEntries == null)
    {
        <p>
            <em>Loading...</em>
        </p>
    }
    else
    {
        <table class="table">
            <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Birthdate</th>
                <th>Length</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var ind in OverviewEntries)
            {
                <tr @ondblclick="() => OnDoubleClick(ind.IndividualId)">
                    <td>@ind.FirstName</td>
                    <td>@ind.LastName</td>
                    <td>@ind.GenderDescription</td>
                    <td>@ind.BirthDate</td>
                    <td>@ind.Length</td>
                    <td>
                        <button @onclick="() => DeleteIndividual(ind.IndividualId)" type="button">
                            <i class="fa-solid fa-dumpster"></i>
                        </button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>