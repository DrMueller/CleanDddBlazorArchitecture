@page "/individuals/{id:long}"
@using Mmu.CleanBlazor.Presentation2.Shared.Components.LoadingIndication
@using Mmu.CleanBlazor.Presentation2.Shared.Components.FormElements.Dropdowns.EnumDropdowns

<LoadingIndicator IsLoading="IsLoading">
    <EditForm Model="@IndividualVm" OnValidSubmit="@HandleValidSubmitAsync">
        <DataAnnotationsValidator/>
        <ValidationSummary/>
        <h1>@HeaderDescription</h1>

        <div class="form-group">
            <label for="firstName">First Name:</label>
            <InputText class="form-control" id="firstName" @bind-Value="@IndividualVm.FirstName"/>
        </div>

        <div class="form-group">
            <label for="lastName">Last Name:</label>
            <InputText class="form-control" id="lastName" @bind-Value="@IndividualVm.LastName"/>
        </div>

        <div class="form-group">
            <label for="birthDate">Birthdate:</label>
            <InputDate class="form-control" id="birthDate" @bind-Value="@IndividualVm.BirthDate"/>
        </div>

        <div class="form-group">
            <label>Geschlecht:</label>
            <EnumDropdown ButtonText="Button auswählen" @bind-Value="@IndividualVm.Gender">
            </EnumDropdown>
        </div>

        <div class="form-group">
            <label>Länge:</label>
            <InputNumber id="length" @bind-Value="IndividualVm.Length" min="1" max="999"/>
        </div>

        <button type="submit" class="btn btn-primary btn-save">Save</button>
        <button type="button" @onclick="GotoOverview" class="btn btn-secondary">Cancel</button>
    </EditForm>
</LoadingIndicator>